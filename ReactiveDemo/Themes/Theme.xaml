<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:component="clr-namespace:ReactiveDemo.Component">
    <ResourceDictionary.MergedDictionaries>
        <component:SharedResourceDictionary Source="pack://application:,,,/ReactiveDemo;component/Themes/Resource/ThemeResource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="Common.Red" Color="{StaticResource System.Color.001}" />
    <SolidColorBrush x:Key="Common.Yellow" Color="{StaticResource System.Color.002}" />
    <SolidColorBrush x:Key="Common.Blue" Color="{StaticResource System.Color.003}" />
</ResourceDictionary>