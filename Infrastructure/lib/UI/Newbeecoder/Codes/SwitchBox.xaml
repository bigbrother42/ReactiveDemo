<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Key="开关按钮">
        <ContentControl Tag="Remark">
            <TextBlock Text="开关按钮。" />
        </ContentControl>
        <ContentControl Tag="Code">
            <StackPanel Orientation="Horizontal">
                <NbSwitchBox Style="{DynamicResource DefaultSwitchBoxStyle}" Margin="5" Content="开关" />
                <NbSwitchBox Style="{DynamicResource DefaultSwitchBoxStyle}" Margin="5" Content="On/Off" CornerRadius="0" OnContent="On" OffContent="Off" SwitchBrush="{Binding Path=Color.Brush_Info3, Source={x:Static NbTheme.Current}}" />
            </StackPanel>
        </ContentControl>
        <ContentControl Tag="Doc">
        </ContentControl>
    </Grid>
</ResourceDictionary>